{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExecutionReceipt",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "receipt_id",
    "system",
    "system_fingerprint",
    "build_hash",
    "version",
    "command_id",
    "authority_seal_id",
    "body",
    "action",
    "adapter",
    "timestamp",
    "outcome",
    "signature"
  ],
  "properties": {
    "receipt_id": {
      "type": "string",
      "description": "Globally unique receipt identifier"
    },
    "system": {
      "type": "string",
      "const": "CORPIFORM"
    },
    "system_fingerprint": {
      "type": "string"
    },
    "build_hash": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "command_id": {
      "type": "string"
    },
    "authority_seal_id": {
      "type": "string"
    },
    "body": {
      "type": "string"
    },
    "action": {
      "type": "string"
    },
    "adapter": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "outcome": {
      "type": "string",
      "enum": ["EXECUTED"]
    },
    "signature": {
      "type": "string",
      "description": "Cryptographic signature binding receipt contents"
    }
  }
}
